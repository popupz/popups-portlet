<?xml version="1.0"?>

<model-hints>
	<model name="com.github.popupz.popups.model.Popup">
		<field name="uuid" type="String" />
		<field name="popupId" type="long" />
		<field name="groupId" type="long" />
		<field name="privateLayout" type="boolean" />
		<field name="companyId" type="long" />
		<field name="userId" type="long" />
		<field name="userName" type="String" />
		<field name="createDate" type="Date" />
		<field name="modifiedDate" type="Date" />
		<field name="title" type="String">
			<hint name="display-width">98%</hint>
			<hint name="max-length">150</hint>
		</field>
		<field name="content" type="String">
			<hint-collection name="CLOB" />
		</field>
		<field name="width" type="int" />
		<field name="mustConfirm" type="boolean" />
		<field name="displayType" type="String" />
		<field name="rules" type="String">
			<hint-collection name="CLOB" />
		</field>
	</model>
</model-hints>